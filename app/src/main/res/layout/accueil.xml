<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ic_launcher_background"
        android:id="@+id/tableLayout"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="25sp"
            android:gravity="center"
            android:background="@color/white">

        </TextView>
        <!-- Layout pour Bedroom -->
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="*">

                <TextView
                    android:text="Chambres :">

                </TextView>

                <TableRow
                    android:id="@+id/table_bedroom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:id="@+id/table_bedroom_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TableRow>

            </TableLayout>

        </HorizontalScrollView>

        <!-- Layout pour Living_room -->
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="*">

                <TextView
                    android:text="Salons :">

                </TextView>

                <TableRow
                    android:id="@+id/table_living_room_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:id="@+id/table_living_room_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TableRow>

            </TableLayout>

        </HorizontalScrollView>

        <!-- Layout pour Kitchen -->
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="*">

                <TextView
                    android:text="Cuisines :">

                </TextView>

                <TableRow
                    android:id="@+id/table_kitchen_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:id="@+id/table_kitchen_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TableRow>

            </TableLayout>

        </HorizontalScrollView>

        <!-- Layout pour Bathroom -->
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="*">

                <TextView
                    android:text="Salles de bains :">

                </TextView>

                <TableRow
                    android:id="@+id/table_bathroom_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:id="@+id/table_bathroom_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TableRow>

            </TableLayout>

        </HorizontalScrollView>

        <!-- Layout pour Other -->
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shrinkColumns="*">

                <TextView
                    android:text="Autre catÃ©gorie :">

                </TextView>

                <TableRow
                    android:id="@+id/table_other_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TableRow>

                <TableRow
                    android:id="@+id/table_other_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                </TableRow>

            </TableLayout>

        </HorizontalScrollView>

    </LinearLayout>

    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
    </include>

</RelativeLayout>